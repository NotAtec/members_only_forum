<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "Title:", input_html: { class: "text "}, wrapper: false, label_html: {class: "label"}, placeholder: "Your new story..", autofocus: true, required: true %>
  </div>
  <div class="control">
    <%= f.input :body, label: "What do you have to say?", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, required: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
