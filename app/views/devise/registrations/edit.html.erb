<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h1 class="title">Edit <%= resource_name.to_s.humanize %></h1>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :username, 
                          label: "Username:",
                          autofocus: true,
                          input_html: { class: "input" },
                          wrapper: false,
                          label_html: { class: "label" },
                          required: true %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :email, 
                          label: "Email:", 
                          input_html: { autocomplete: "email", class: "input" }, 
                          wrapper: false, 
                          label_html: { class: "label" }, 
                          required: true %>
            </div>
          </div>
          <div class="field">
            <div class="control">
                <%= f.input :password,
                            label: "New Password:",
                            hint: "Leave blank if you do not want to change your password. ",
                            required: false,
                            input_html: { autocomplete: "new-password", class: "input" },
                            wrapper: false,
                            label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
                <%= f.input :password_confirmation,
                            required: false,
                            input_html: { autocomplete: "new-password", class: "input" },
                            label: "Confirm Password:",
                            wrapper: false,
                            label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
                <%= f.input :current_password,
                            hint: "Fill in your current password to confirm the changes",
                            required: true,
                            input_html: { autocomplete: "current-password", class: "input" },
                            wrapper: false,
                            label_html: { class: "label" } %>
            </div>
          </div>

          <% if current_user.username == 'Odin' %>
            <%= f.button :submit, "Update", disabled: true, class: "button is-primary", style: "width: 100%"%>
          <% else %>
            <%= f.button :submit, "Update", class: "button is-primary", style: "width: 100%"%>
          <% end %>
          
        <% end %>
        <br>
        <%= link_to 'Back', root_path, class: "button is-dark level-item" %>
        <br>
        <% if current_user.username == 'Odin' %>
          <p>Unhappy? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, disabled: true, class: "button is-danger" %></p>
        <% else %>
          <p>Unhappy? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-danger" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
