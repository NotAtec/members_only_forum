<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h1 class="title">Edit <%= resource_name.to_s.humanize %></h1>
        <!-- form -->
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :email, 
                          label: "Email:", 
                          input_html: { autocomplete: "email", class: "input" }, 
                          wrapper: false, 
                          label_html: { class: "label" }, 
                          autofocus: true,
                          required: true %>
            </div>
          </div>
          <div class="field">
            <div class="control">
                <%= f.input :password,
                            label: "New Password:",
                            hint: "Leave blank if you do not want to change your password. ",
                            required: false,
                            input_html: { autocomplete: "new-password", class: "input" },
                            wrapper: false,
                            label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
                <%= f.input :password_confirmation,
                            required: false,
                            input_html: { autocomplete: "new-password", class: "input" },
                            label: "Confirm Password:",
                            wrapper: false,
                            label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
                <%= f.input :current_password,
                            hint: "Fill in your current password to confirm the changes",
                            required: true,
                            input_html: { autocomplete: "current-password", class: "input" },
                            wrapper: false,
                            label_html: { class: "label" } %>
            </div>
          </div>
        <br>
        <%= link_to 'Back', root_path, class: "button is-dark level-item" %>
      </div>
    </div>
  </div>
</div>
  <div class="form-inputs">
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
